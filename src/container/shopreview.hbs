<main>
    <hr>
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <h1>{{header}}</h1>
            <p class="pb-3Ї">{{rating.title}}: {{rating.value}}</p>
            {{#with actionBlock}}
            <ul class="nav nav-tabs mb-5 row">
                {{#each tabs}}
                <li class="nav-item col-4">
                    {{#if isActive}}
                    <a class="nav-link active text-center" aria-current="page" href="#"><b>{{text}}</b></a>
                    {{else}}
                    <a class="nav-link text-center" aria-current="page" href="#">{{text}}</a>
                    {{/if}}
                </li>
                {{/each}}
            </ul>
            <hr>
            {{#with report}}
            <div class="card my-5">
                <div class="card-body">
                    <p class="card-text">{{title}}
                    </p>
                    <a href={{button.link}} class="btn btn-secondary">{{button.text}}</a>
                </div>
            </div>
            {{/with}}
            {{/with}}
            <hr>
            <div class="my-5">
                {{#with feedbackBlock}}
                {{>title data=title big=true class="mb-5"}}
                <div class="mt-5">
                    {{#each buttons}}
                    {{#if isWarning}}
                    <a type="button" href={{link}} class="btn btn-warning">{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a type="button" href={{link}} class="btn btn-success mx-3">{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a type="button" href={{link}} class="btn btn-danger">{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card">
                <div class="card-body">
                    <img src={{photo}} class="card-img" style="width: 9rem;" alt=" Note Asus">
                    <h5 class="card-title mt-3">{{name}}</h5>
                </div>
            </div>
            <div class="card my-3">
                <div class="card-body">
                    <h5 class="card-title">{{price}}</h5>
                    <p class="card-text">
                        {{#if inMarket}}
                        є в наявності
                        {{else}}
                        <span class="text-danger">немає в наявності</span>
                        {{/if}}
                    </p>
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <a href={{link}} class="btn btn-primary">{{text}}</a>
                    {{/if}}
                    {{#if isSecondary}}
                    <div class="mt-3">
                        <a href={{link}} class="btn btn-secondary">{{text}}</a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">{{seller.title}}: <b>{{seller.value}}</b></p>
                </div>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <hr class="pb-5">
    {{>reviewItem data=reviewList }}
    {{#with service}}
    <div class="card text-bg-success my-5">
        <div class="card-body text-center">
            <h2 class="card-title mb-3">{{title}}</h2>
            <p class="card-text">{{description}}</p>
            {{#each buttons}}
            <div>
                <a href={{link}} class="btn btn-primary">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
    {{/with}}
    <hr>
</main>