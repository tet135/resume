<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">{{category}}</li>
    </ol>
</nav>
<h1>{{name}} <span class="badge bg-secondary"></span></h1>
<p>
<h6><strong>{{description}}</strong> <span class="badge bg-secondary"></span></h6>
</p>
<h4><em>Price: <span class="badge bg-success">{{price}}</span></em></h4>
<section>
    <h2 class="text-success">Features</h2>
    {{#with features}}
    {{#with processor}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            processor
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">brand: {{brand}}</li>
            <li class="list-group-item">model: {{model}}</li>
            <li class="list-group-item">speed: {{speed}}</li>
            <li class="list-group-item">cores: {{cores}}</li>
            <li class="list-group-item">cache: {{cache}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    {{#with memory}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            memory
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">type: {{type}}</li>
            <li class="list-group-item">size: {{size}}</li>
            <li class="list-group-item">speed: {{speed}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    {{#with storage}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            storage
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">type: {{type}}</li>
            <li class="list-group-item">size: {{size}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    {{#with display}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            display
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">size: {{size}}</li>
            <li class="list-group-item">resolution: {{resolution}}</li>
            <li class="list-group-item">technology: {{technology}}</li>
            <li class="list-group-item">color_space: {{color_space}}</li>
            <li class="list-group-item">brightness: {{brightness}}</li>
            <li class="list-group-item">refresh_rate: {{refresh_rate}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    {{#with graphics}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            graphics
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">brand: {{brand}}</li>
            <li class="list-group-item">model: {{model}}</li>
            <li class="list-group-item">memory: {{memory}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            ports
        </div>
    </div>
    {{#each ports}}
    <div class="card text-capitalize" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item text-bg-light">type: {{type}}</li>
            <li class="list-group-item">count: {{count}}</li>
            {{#if features}}
            <li class="list-group-item">features: {{>ul data=features}}</li>
            {{/if}}
        </ul>
    </div>
    {{/each}}
    <br>
    {{#with battery}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            battery
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">type: {{type}}</li>
            <li class="list-group-item">capacity: {{capacity}}</li>
            <li class="list-group-item">life: {{life}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    <div class="card " style="width: 18rem;">
        <div class="card-header text-capitalize text-bg-success text-end">
            weight
        </div>
        <div class="list-group list-group-flush">
            <li class="list-group-item">{{weight}}</li>
        </div>
    </div>
    <br>
    {{#with dimensions}}
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            dimensions
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">height: {{height}}</li>
            <li class="list-group-item">width: {{width}}</li>
            <li class="list-group-item">depth: {{depth}}</li>
        </ul>
    </div>
    {{/with}}
    <br>
    <div class="card " style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            Operating system
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{operating_system}}</li>
        </ul>
    </div>
    <br>
    <div class="card text-capitalize" style="width: 18rem;">
        <div class="card-header text-bg-success text-end">
            accessories
        </div>
    </div>
    {{#each accessories}}
    <div class="card text-capitalize" style="width: 18rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item text-bg-light ">{{name}}</li>
            <li class="list-group-item text-end"><i>price: {{price}} $</i></li>
        </ul>
    </div>
    {{/each}}
    {{/with}}
</section>