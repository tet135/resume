{{#with data}}
<div class="card">
    <div class="card-body row">
        {{#each this}}
        <div class="col-4">
            <p class="card-text mb-0">
                {{title}}
            </p>
            <h4 class="card-title">
                {{value}}
            </h4>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}