{{#each data}}
<div class="card my-3">
    <div class="card-body pb-0">
        <div class="card mb-3">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    {{#with title}}
                    <h5 class="card-title">{{userName}}</h5>
                    <p>{{caption}}</p>
                    <date>{{date}}</date>
                    {{/with}}
                </li>
                <li class="list-group-item">
                    {{#with reviewBody}}
                    <p>{{seller.title}}: {{seller.value}}</p>
                    <p>{{rating.title}}: {{rating.value}}</p>
                    <p>{{text}}</p>
                    <strong>{{advantages.title}}:</strong>
                    <p>{{advantages.text}}</p>
                    <strong>{{disadvantages.title}}:</strong>
                    <p>{{disadvantages.text}}</p>
                    <div class="row pb-2">
                        {{#each images}}
                        <img src={{this}} class="card-img" style="width: 8rem;" alt="photo">
                        {{/each}}
                    </div>
                    {{/with}}
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-1">
            </div>
            {{#with reviewBody}}
            <div class="col-11">
                {{#each coments}}
                <div class="card mb-3">
                    <div class="card-body">
                        <h5>{{userName}}</h5>
                        <p>
                            <date>{{date}}</date>
                        </p>
                        <p class="mb-0">{{text}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
    </div>
</div>
{{/each}}