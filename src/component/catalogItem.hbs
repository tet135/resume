<div class="card mb-3">
    <img src={{img}} class="card-img-top" alt="item photo">
    <div class="card-body">
        <div class="mb-3">
            {{#if isHot}}
            <span class="badge text-bg-warning rounded-pill text-light text-uppercase">
                hot!
            </span>
            {{/if}}
            {{#if isNew}}
            <span class="badge text-bg-primary rounded-pill text-capitalize">
                new
            </span>
            {{/if}}
            {{#if isFast}}
            <span class="badge text-bg-secondary rounded-pill text-capitalize">
                fast delivery
            </span>
            {{/if}}
            {{#if isFree}}
            <span class="badge text-bg-success rounded-pill text-capitalize">
                free
            </span>
            {{/if}}
        </div>
        <div>
            <a type="button" href="#" class="btn btn-success mb-2">Швидка доставка</a>
            <a type="button" href="#" class="btn btn-secondary mb-2">Безкоштовна доставка</a>
        </div>
        <h5 class="card-title">{{name}}</h5>
        <p class="card-text">{{review.amount}} {{review.text}}</p>
        <h4>{{price}}</h4>
        <p class="card-text">{{delivery}}</p>
        <div>
            {{#each buttons}}
            {{#if isPrimary}}
            <a type="button" href={{link}} class="btn btn-primary btn-lg mb-2">{{text}}</a>
            {{/if}}
            {{#if isSecondary}}
            <a type="button" href={{link}} class="btn btn-secondary btn-lg mb-2">{{text}}</a>
            {{/if}}
            {{/each}}
        </div>
        <ul class="card-text">
            {{#each characteristics}}
            <li>
                {{title}}: {{value}}
            </li>
            {{/each}}
        </ul>
    </div>
</div>